class Solution:
    def longestSubarray(self, nums: List[int]) -> int:
        max_and = max(nums)
        i = 0
        max_sub = 1
        while i < len(nums):
            if nums[i] == max_and:
                j = i + 1
                while j < len(nums) and nums[j] == max_and:
                    j +=1
                if j - i > max_sub:
                    max_sub = j - i
                i = j
            else:
                i +=1
        return max_sub
